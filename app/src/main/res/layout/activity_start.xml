<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.auth.activity.StartActivity"
    android:background="@color/bgcolor"
    >



    <LinearLayout
        android:id="@+id/linearLayout1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent">


        <ImageView
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:layout_gravity="center_horizontal"
            android:src="@drawable/movie_ic" />


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/hammersmith_one"
            android:text="CineMania"
            android:textColor="@color/white"
            android:textSize="30sp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="15dp"
            />


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:gravity="center"
            android:textSize="15sp"
            android:textColor="#8A8787"
            android:layout_marginTop="5dp"
            android:fontFamily="@font/hammersmith_one"
            android:text="Enter your information to \n start you adventure ! "/>



        <Button
            android:id="@+id/signUpBtn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/cyan"
            android:layout_marginStart="60dp"
            android:layout_marginEnd="60dp"
            android:layout_marginTop="10dp"
            android:text="Sign Up"
            android:textSize="17sp"
            android:fontFamily="@font/hammersmith_one"/>



       <LinearLayout
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:orientation="horizontal"
           android:layout_gravity="center"
           android:layout_marginTop="20dp">

           <TextView
               android:id="@+id/relativeText"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:text="Already have an account?"
               android:fontFamily="@font/hammersmith_one"
               android:textColor="@color/white"/>
           <TextView
               android:id="@+id/signInText"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:text="Sign In. "
               android:textColor="#0453DC"
               android:fontFamily="@font/hammersmith_one"
               android:layout_marginStart="10dp"/>

       </LinearLayout>


        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:textSize="20dp"
            android:fontFamily="@font/hammersmith_one"
            android:layout_marginTop="15dp"
            android:textColor="#787777"
            android:gravity="center"
            android:text="or"/>


       <FrameLayout
           android:id="@+id/signInViaGoogle"
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:background="@drawable/button_bg"
           android:layout_marginEnd="60dp"
           android:layout_marginTop="10dp"
           android:layout_marginStart="60dp"
           >
           <ImageView
               android:layout_width="40dp"
               android:layout_height="40dp"
               android:src="@drawable/google_ic"
               android:layout_marginStart="20dp"
               android:padding="5dp"
               />

           <TextView
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:text="Sign in with Google"
               android:layout_gravity="center"
               android:textColor="@color/white"
               android:textSize="15sp"
               android:textStyle="bold"
               android:fontFamily="@font/hammersmith_one"/>
       </FrameLayout>

    </LinearLayout>



</androidx.constraintlayout.widget.ConstraintLayout>